---
import MainLayout from "./MainLayout.astro";
import FlashcardPlayer from "../components/FlashcardPlayer";
import CollectionSelector from "../components/CollectionSelector";

interface Props {
  collection?: string;
}

const { collection } = Astro.props;
---

<MainLayout title={collection ? `Study: ${collection}` : "Study"}>
  <div class="container mx-auto p-4">
    <div class="my-8">
      {collection ? (
        <FlashcardPlayer collection={collection} client:only="react" />
      ) : (
        <div class="flex flex-col items-center justify-center">
          <h1 class="text-3xl font-bold mb-6">Choose a Collection to Study</h1>
          <CollectionSelector client:load />
        </div>
      )}
    </div>
  </div>
</MainLayout> 