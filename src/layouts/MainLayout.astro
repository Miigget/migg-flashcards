---
import Layout from "./Layout.astro";
import { Toaster } from "../components/ui/toaster";
import { Button } from "@/components/ui/button";
import { ThemeToggle } from "@/components/ThemeToggle";

interface Props {
  title?: string;
}

const { title = "MiggFlashcards" } = Astro.props;
const user = Astro.locals.user;
---

<Layout title={title}>
  <main class="min-h-screen bg-background">
    <div class="flex flex-col min-h-screen">
      <header
        class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-14 items-center">
          <!-- Left section -->
          <div class="flex-1 flex justify-center">
            <div class="flex items-center space-x-6">
              <div class="mr-4 hidden md:flex">
                <a href="/" class="flex items-center space-x-2">
                  <span class="font-bold text-xl">MiggFlashcards</span>
                </a>
              </div>
            </div>
          </div>

          <!-- Center section with navigation -->
          <nav class="flex items-center space-x-2 text-sm font-medium">
            <a href="/dashboard">
              <Button variant="ghost" size="sm">Dashboard</Button>
            </a>
            <a href="/collections">
              <Button variant="ghost" size="sm">Collections</Button>
            </a>
            <a href="/generate">
              <Button variant="ghost" size="sm">Generate</Button>
            </a>
            <a href="/create">
              <Button variant="ghost" size="sm">Create</Button>
            </a>
          </nav>

          <!-- Right section -->
          <div class="flex-1 flex justify-end">
            <div class="flex items-center space-x-4">
              {
                user ? (
                  <>
                    <span class="text-sm font-medium text-muted-foreground">{user.email}</span>
                    <div class="mx-3">
                      <ThemeToggle client:load />
                    </div>
                    <form method="POST" action="/api/auth/logout" class="inline-block">
                      <Button type="submit" variant="outline" size="sm">
                        Log out
                      </Button>
                    </form>
                  </>
                ) : (
                  <>
                    <ThemeToggle client:load />
                    <a href="/auth/login">
                      <Button variant="outline" size="sm">
                        Log in
                      </Button>
                    </a>
                  </>
                )
              }
            </div>
          </div>
        </div>
      </header>
      <div class="flex-1">
        <slot />
      </div>
      <footer class="border-t py-6">
        <div class="container flex flex-col items-center justify-between gap-4 md:flex-row">
          <p class="text-center text-sm text-muted-foreground md:text-left">
            &copy; {new Date().getFullYear()} MiggFlashcards. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
  </main>
  <Toaster client:load />
</Layout>
