---
import Layout from "./Layout.astro";
import { Toaster } from "../components/ui/toaster";

interface Props {
  title?: string;
}

const { title = "MiggFlashcards" } = Astro.props;
---

<Layout title={title}>
  <main class="min-h-screen bg-background">
    <div class="flex flex-col min-h-screen">
      <header
        class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-14 items-center">
          <div class="mr-4 flex">
            <a href="/" class="flex items-center space-x-2">
              <span class="font-bold text-xl">MiggFlashcards</span>
            </a>
          </div>
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a href="/" class="transition-colors hover:text-foreground/80">Fiszki</a>
            <a href="/collections" class="transition-colors hover:text-foreground/80">Kolekcje</a>
            <a href="/generate" class="transition-colors hover:text-foreground/80">Generuj</a>
          </nav>
        </div>
      </header>
      <div class="flex-1">
        <slot />
      </div>
      <footer class="border-t py-6">
        <div class="container flex flex-col items-center justify-between gap-4 md:flex-row">
          <p class="text-center text-sm text-muted-foreground md:text-left">
            &copy; {new Date().getFullYear()} MiggFlashcards. Wszelkie prawa zastrze≈ºone.
          </p>
        </div>
      </footer>
    </div>
  </main>
  <Toaster client:load />
</Layout>
